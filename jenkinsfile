pipeline {
    agent any
    tools {
        maven 'Maven-3.8.7' // Name from Jenkins Tools config
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 
'https://github.com/your-username/your-repo.git'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
    }
}
